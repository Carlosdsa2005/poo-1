import java.util.Scanner;

public class Main
{
	public static void main(String[] args) 
	{
	    Scanner scanner = new Scanner(System.in);
	   
	   int numero ;
	   do
	   {
	        
	    
	    System.out.println("*********************");
	    System.out.println("\tMENU");
	    System.out.println("*********************");
		System.out.println("[1] adição");
		System.out.println("[2] subtração");
		System.out.println("[3] mult");
		System.out.println("[4] divisão");
		System.out.println("[0] sair");
		
	    System.out.println("escolha sua opção");
	    numero = scanner.nextInt();
	    
	          
	        int n1;
	        int n2;
	        int total;

	    switch (numero)
	    {
	       case 1:
	            System.out.println("digite o primeiro numero da adicão: ");
	            n1 = scanner.nextInt();
	            
	            System.out.println("digite o segundo numero da adicão: ");
	            n2 = scanner.nextInt();
	            
	            total = n1 + n2;
	            System.out.println("o resultado da soma é " + total);
	            System.out.println();
	            break;
	       
	       
	       case 2:
	            System.out.println("digite o primeiro numero da subtracão: ");
	            n1 = scanner.nextInt();
	            
	            System.out.println("digite o segundo numero da subtracão: ");
	            n2 = scanner.nextInt();
	            
	            total = n1 - n2;
	            System.out.println("o resultado da subtracão é " + total);
	            System.out.println();
	            break;
	            
	            
	       case 3: 
	            System.out.println("digite o primeiro numero da multiplicação: ");
	            n1 = scanner.nextInt();
	            
	            System.out.println("digite o segundo numero da multiplicação: ");
	            n2 = scanner.nextInt();
	            
	            total = n1 * n2;
	            System.out.println("o resultado da multiplicação é " + total);
	            System.out.println();
	            break;
	            
	       case 4:
	            System.out.println("digite o primeiro numero da divisão: ");
	            n1 = scanner.nextInt();
	            
	            System.out.println("digite o segundo numero da divisão: ");
	            n2 = scanner.nextInt();
	            
	            total = n1 / n2;
	            System.out.println("o resultado da divisão é \n" + total);
	            System.out.println();
	            break;
	            
	       case 0:
	            System.out.println("adeus \n");
	            break;
	            
               default:
                    System.out.println("opção invalida\n");
                    break;

	       }
	        
	   } while (numero != 0);
	            
	}
}
